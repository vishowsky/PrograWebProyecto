@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Sistema de control de usuarios en mantencion</h1>
</div>

<div class="text-center">
    <div class="row justify-content-center mt-2">

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-person" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administrar usuarios</h5>
                    <p class="card-text">Administrar los usuarios dentro del sistema</p>
                    <a asp-controller="User" asp-action="Index"
                       class="btn btn-danger col-12">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-address-card" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Cargos</h5>
                    <p class="card-text">Administrar los Cargos dentro de la plataforma</p>
                    <a asp-controller="Cargo" asp-action="Index"
                       class="btn btn-danger col-12">Gestionar</a>
                </div>
            </div>
        </div>

          <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-book" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de los turnos</h5>
                    <p class="card-text">Administrar los Turnos dentro de la plataforma</p>
                    <a asp-controller="Turno" asp-action="Index"
                       class="btn btn-danger col-12">Gestionar</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row justify-content-center mt-2">

        

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-venus-mars" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Generos</h5>
                    <p class="card-text">Administrar los Generos dentro de la plataforma</p>
                    <a asp-controller="Genero" asp-action="Index"
                       class="btn btn-danger col-12">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-ring-wedding" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Estados civiles</h5>
                    <p class="card-text">Administrar los estados civiles dentro de la plataforma</p>
                    <a asp-controller="Civil" asp-action="Index"
                       class="btn btn-danger col-12">Gestionar</a>
                </div>
            </div>
        </div>

           
        </div>

    </div>
</div>
